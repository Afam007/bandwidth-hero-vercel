{
  "version": 2,
  "name": "bandwidth-hero-proxy",
  "installCommand": "pnpm install",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node@latest"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],
  "env": {
    "PLAYWRIGHT_BROWSERS_PATH": "0"  // Ensures Playwright uses packaged browsers
  }
}

